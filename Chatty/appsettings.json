{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=MOHAMED-ELOCKLY\\MYSQLSERVER;Initial Catalog=Chatty;Integrated Security=True;Encrypt=True;Trust Server Certificate=True"
  },

  "JWT": {
    "Key": "super_secret_key_123",
    "Issuer": "https://localhost:5001",
